<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hbp_img"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".MessageActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:id="@+id/ImageButton_chattinglist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backbutton"
                android:layout_marginTop="18dp"
                android:layout_marginStart="20dp"/>


            <ImageView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@null"
                android:layout_marginStart="53dp"
                android:src="@drawable/chat_title" />

            <TextView
                android:id="@+id/TextView_Bigtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:text="푸딩딩"
                android:textColor="#646464"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_Bigtitle"
                android:layout_centerInParent="true"
                android:text="#Seventeen  #헹가래  #HANA"
                android:textColor="#646464"
                />
        </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageActivity_reclclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="vertical" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            >

            <ImageView
                android:id="@+id/ImageView_white_box_nonradius2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_box_nonradius1"
                />

            <ImageView
                android:id="@+id/ImageView_background"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/chat_bubble"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_alignEnd="@+id/ImageView_white_box_nonradius2"/>

            <EditText
                android:id="@+id/messageActivity_editText"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:layout_alignEnd="@+id/ImageView_white_box_nonradius2"
                />

            <ImageButton
                android:id="@+id/ImageButton_plus"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:background="@null"
                android:src="@drawable/plus_icon" />

            <ImageButton
                android:id="@+id/messageActivity_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignRight="@+id/ImageView_white_box_nonradius2"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="26dp"
                android:background="@null"
                android:src="@drawable/enterbutton" />

        </RelativeLayout>

    </LinearLayout>